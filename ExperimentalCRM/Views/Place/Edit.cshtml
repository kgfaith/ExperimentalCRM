<!-- jquery templates -->
<script id="placeList" type="text/x-jquery-tmpl">
	<div class="metal-plate">
        <button type="button" class="close">×</button>
        <strong>${value}</strong>  : <strong>${label}</strong>  
        <input type="hidden" class="hidden" value="${value}" />       
	</div>
</script>
<script id="articleSearchList" type="text/x-jquery-tmpl">
    <tr>
        <td><span class="plus-icon"></span></td>
        <td class="id"><span class="value">${value}</span></td>
        <td><span class="lbl">${label}</span>
            <input type="hidden" value="${value}" /> 
        </td>
    </tr>
</script>
<script id="articleSelectedList" type="text/x-jquery-tmpl">
    <tr>
        <td class="id">${value}</td>
        <td>${label}
            <input type="hidden" value="${value}" /> 
        </td>
        <td class="control"><span class="cross-icon"></span></td>
    </tr>
</script>
<!--  == Knockout templates ==  -->
<script type="text/html" id="selected-picture-kotemp">
    <div class="fl">
        <div class="thumb-nail-div">
        <div data-bind="click: $root.removePictureFromSelectedList" class="cross-btn-small hidden"><span>&times;</span></div>
        <img data-bind="attr: { src: imageUrl }">
        <p><!--ko text: title--><!--/ko--></p>
        </div>
    </div>
</script>

