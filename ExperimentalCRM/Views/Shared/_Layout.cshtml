<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - T-CMS</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
        @*<link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" rel="stylesheet" type="text/css" />
        <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>*@
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <header class="navbar navbar-inverse ">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Myanmar Attractions", "Index", "Home", null, new { @class = "brand"})
                    <div class="nav-collapse collapse">
                        <a href="#" class="btn pull-right">Log in</a>
                        <ul class="nav">
                            <li>@Html.ActionLink("Articles", "Index", "Article")</li>
                            <li>@Html.ActionLink("Places", "Index", "Place")</li>
                            <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <div class="container-fluid">
          <div class="row-fluid">
             @RenderBody()
          </div><!--/row-->

          
            <footer id="footer" class="navbar-fixed-bottom">
                <p>© MyanmarAttractions.com 2013</p>
            </footer>
          </div>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("Scripts", required: false)
    </body>
</html>
