@model ExperimentalCMS.ViewModels.AdminChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}
<div class="span5">
@using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
        <legend>Account Detail</legend>
    
        @Html.HiddenFor(model => model.AdminId)

        <div class="row-fluid">
            <div class="span2 text-right">
                <strong>User Name : </strong>
            </div>
            <div class="span8">
                @Html.Label(Model.UserName)
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2 text-right">
                <strong>Full Name :  </strong>
            </div>
            <div class="span8">
                @Html.Label(Model.FullName)
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2 text-right">
                <strong>Email : </strong>
            </div>
            <div class="span8">
                @Model.Email
            </div>
        </div>

        <legend class="mt20">Change password</legend>
    
        <div class="editor-label">
            @Html.LabelFor(model => model.NewPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewPassword)
            @Html.ValidationMessageFor(model => model.NewPassword)
        </div>
    
        <div class="editor-label mt20">
            @Html.LabelFor(model => model.ConfirmNewPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConfirmNewPassword)
            @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
        </div>

        <p class="mt20">
             <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
        </p>
}
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
