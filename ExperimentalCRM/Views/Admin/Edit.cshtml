@model ExperimentalCMS.ViewModels.AdminEditViewModel
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    <div>
    @Html.ValidationSummary(true)
    </div>
    <fieldset>
        <legend>@Model.UserName</legend>
        @Html.HiddenFor(model => model.UserName)
        @Html.HiddenFor(model => model.AdminId)

        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.LastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        
        <p>
            <input type="submit" value="Save" class="btn btn-primary" />
             @Html.ActionLink("Change Password", "ChangePassword", new { id = Model.AdminId }, new { @class = "btn" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
        </p>
    </fieldset>
}
<div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
