@model IEnumerable<ExperimentalCMS.Model.Article>
@{
    ViewBag.Title = "Articles";
}
<div class="span12">
    <h4 class="mb10">
        Articles</h4>
    <div class="row-fluid">
        <div class="span10">
            <p>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
            </p>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ArticleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastUpdatedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PublishDate)
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArticleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastUpdatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublishDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ArticleId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ArticleId })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
